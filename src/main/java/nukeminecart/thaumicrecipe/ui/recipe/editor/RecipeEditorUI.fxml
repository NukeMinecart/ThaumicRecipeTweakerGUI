<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="750.0"
            style="-fx-background-color: #222428;" stylesheets="@../../resources/Dark.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="main.java.nukeminecart.thaumicrecipe.ui.recipe.editor.RecipeEditorUI">
    <Rectangle arcHeight="5.0" arcWidth="5.0" height="29.0" layoutY="1.0" onMouseDragged="#paneDragged"
               onMousePressed="#panePressed" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #181716;"
               styleClass="tool-bar" width="750.0"/>
    <Button layoutX="725.0" layoutY="4.0" mnemonicParsing="false" onAction="#closeScreen" styleClass="button" text="X"/>
    <Label fx:id="title" layoutX="14.0" layoutY="5.0" onMouseDragged="#paneDragged" onMousePressed="#panePressed"
           prefHeight="20.0" prefWidth="423.0" text="Recipe Editor">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </Label>
    <ListView fx:id="ingredientsListview" layoutX="375.0" layoutY="97.0" prefHeight="307.0" prefWidth="145.0"/>
    <TextField fx:id="nameField" layoutX="48.0" layoutY="67.0" prefHeight="27.0" prefWidth="177.0" promptText="Name"/>
    <TextField fx:id="inputField" layoutX="48.0" layoutY="151.0" prefHeight="27.0" prefWidth="177.0"
               promptText="Input"/>
    <TextField fx:id="outputField" layoutX="48.0" layoutY="237.0" prefHeight="27.0" prefWidth="177.0"
               promptText="Output"/>
    <TextField fx:id="visField" layoutX="49.0" layoutY="327.0" prefHeight="25.0" prefWidth="177.0" promptText="Vis"/>
    <ListView fx:id="aspectListview" layoutX="569.0" layoutY="97.0" prefHeight="307.0" prefWidth="145.0"/>
    <MenuButton layoutX="265.0" layoutY="67.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="67.0" text="Type">
        <items>
            <MenuItem mnemonicParsing="false" text="Normal"/>
            <MenuItem mnemonicParsing="false" text="Arcane"/>
            <MenuItem mnemonicParsing="false" text="Crucible"/>
            <MenuItem mnemonicParsing="false" text="Infusion"/>
        </items>
        <font>
            <Font size="13.0"/>
        </font>
    </MenuButton>
    <Button layoutX="274.0" layoutY="238.0" mnemonicParsing="false" onAction="#openShapeEditor" text="Shape">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
    <CheckBox layoutX="261.0" layoutY="155.0" mnemonicParsing="false" text="Shapeless">
        <font>
            <Font size="13.0"/>
        </font>
    </CheckBox>
    <Button layoutX="224.0" layoutY="414.0" mnemonicParsing="false" onAction="#returnToManager" text="Return">
        <font>
            <Font size="15.0"/>
        </font>
    </Button>
    <Button layoutX="48.0" layoutY="414.0" mnemonicParsing="false" onAction="#saveRecipeAndReturn" text="Save">
        <font>
            <Font size="15.0"/>
        </font>
    </Button>
    <Button layoutX="610.0" layoutY="48.0" mnemonicParsing="false" onAction="#openAspectsList" text="Aspects">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
    <Button layoutX="157.0" layoutY="237.0" mnemonicParsing="false" onAction="#openOutputItemSearch" prefHeight="27.0"
            prefWidth="67.0" text="Output">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
    <Button layoutX="157.0" layoutY="151.0" mnemonicParsing="false" onAction="#openInputItemSearch" prefHeight="27.0"
            prefWidth="67.0" text="Input">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
    <Button layoutX="406.0" layoutY="48.0" mnemonicParsing="false" onAction="#openIngredientsList" text="Ingredients">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
</AnchorPane>
